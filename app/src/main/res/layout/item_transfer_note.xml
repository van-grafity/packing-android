<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/btn_item_transfer_note"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_margin="4dp"
        android:layout_weight="1"
        android:clickable="true"
        android:elevation="16dp"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#E0E4ED"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_transfer_note" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:orientation="vertical"
                android:padding="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_transfer_note_serial"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PTN-2311-001"
                        android:textAppearance="@style/TextAppearance.Bold16"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_datetime_create_at"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20 November 2023, 15:00"
                        android:textAppearance="@style/TextAppearance.Regular10"
                        android:textColor="@color/colorPrimary" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginVertical="8dp"
                        android:background="#DEDEDED9" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="3"
                            android:text="Pallet Number :  "
                            android:textAppearance="@style/TextAppearance.Regular12" />

                        <TextView
                            android:id="@+id/tv_pallet_no"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:gravity="left"
                            android:maxLines="1"
                            android:text="PLT-A0002"
                            android:textAppearance="@style/TextAppearance.Regular12" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="3"
                            android:text="Total Carton :  "
                            android:textAppearance="@style/TextAppearance.Regular12" />

                        <TextView
                            android:id="@+id/tv_total_carton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:gravity="left"
                            android:maxLines="1"
                            android:text="4"
                            android:textAppearance="@style/TextAppearance.Regular12" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="3"
                            android:text="Total Pcs :  "
                            android:textAppearance="@style/TextAppearance.Regular12" />

                        <TextView
                            android:id="@+id/tv_total_pcs"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:gravity="left"
                            android:maxLines="1"
                            android:text="284"
                            android:textAppearance="@style/TextAppearance.Regular12" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="3"
                            android:text="Issued by :  "
                            android:textAppearance="@style/TextAppearance.Regular12" />

                        <TextView
                            android:id="@+id/tv_issued_by"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:gravity="left"
                            android:maxLines="1"
                            android:text="Nicole Frod"
                            android:textAppearance="@style/TextAppearance.Regular12" />
                    </LinearLayout>
                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>